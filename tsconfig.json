{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["esnext", "DOM"],
    "target": "esnext",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],
    "strictPropertyInitialization": false
  }
}
